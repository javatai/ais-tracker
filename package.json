{
  "name": "ais-server",
  "version": "1.0.0",
  "description": "Process AIS messages and serve as REST API and WebSocket",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3epnm/ais-server.git"
  },
  "author": "Marcel Bretschneider <marcel.bretschneider@gmail.com> (http://mb.aquarius.uberspace.de/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3epnm/ais-server/issues"
  },
  "homepage": "https://github.com/3epnm/ais-server#readme",
  "dependencies": {
    "ais-receiver": "git://github.com/3epnm/ais-receiver.git",
    "backbone": "^1.2.3",
    "backbone-relational": "^0.10.0",
    "bootstrap-switch": "^3.3.2",
    "express": "^4.13.3",
    "file-stream-rotator": "0.0.6",
    "geographiclib": "^1.45.0",
    "jquery": "^2.1.4",
    "mapbox-gl-js": "git://github.com/mapbox/mapbox-gl-js.git",
    "moment": "^2.10.6",
    "morgan": "^1.6.1",
    "mysql": "^2.9.0",
    "nouislider": "leongersen/noUiSlider",
    "q": "^1.4.1",
    "sequelize": "^3.9.0",
    "socket.io": "^1.3.7",
    "sqlite3": "^3.1.0",
    "underscore": "^1.8.3",
    "underscore.string": "^3.2.2"
  },
  "devDependencies": {
    "brfs": "^1.4.1",
    "browserify": "^11.2.0",
    "browserify-shim": "^3.8.10",
    "envify": "^3.4.0",
    "less": "^2.5.3",
    "minifier": "^0.7.1",
    "spritezero-cli": "^1.0.1",
    "uglify-js": "^2.5.0",
    "watchify": "^3.4.0"
  },
  "scripts": {
    "generate-sprite": "node sprites/generate.js && node_modules/spritezero-cli/bin/spritezero html/ship-marker@2x --retina sprites/input && node_modules/spritezero-cli/bin/spritezero html/ship-marker sprites/input",
    "build-js": "node_modules/browserify/bin/cmd.js -t envify app/desktop.js > html/desktop.js",
    "watch-js": "node_modules/watchify/bin/cmd.js app/desktop.js -o html/desktop.js -dv",
    "minify-js": "node_modules/uglify-js/bin/uglifyjs -o html/desktop.min.js --compress --mangle -- html/desktop.js",
    "build-css": "node_modules/less/bin/lessc app/style/style.less html/style.css",
    "watch-css": "node_modules/watch-run/bin/watch -p 'app/style/**/*.less' node_modules/less/bin/lessc app/style/style.less html/style.css",
    "minify-css": "node node_modules/minifier/index.js -o html/style.min.css html/style.css",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-css",
    "minify": "npm run build && npm run minify-js && npm run minify-css",

    "build-mobile-js": "node_modules/browserify/bin/cmd.js -t envify app/mobile.js > cordova/www/mobile.js",
    "minify-mobile-js": "node_modules/uglify-js/bin/uglifyjs -o cordova/www/mobile.js --compress --mangle -- cordova/www/mobile.js",
    "build-mobile-css": "node_modules/less/bin/lessc app/style/style.less cordova/www/style.css",
    "minify-mobile-css": "node node_modules/minifier/index.js -o cordova/www/style.css cordova/www/style.css",

    "build-mobile-debug": "npm run build-mobile-js && npm run build-mobile-css",

    "watch-mobile-js": "node_modules/watchify/bin/cmd.js app/mobile.js -o cordova/www/mobile.js -dv",
    "watch-mobile-css": "node_modules/watch-run/bin/watch -p 'app/style/**/*.less' node_modules/less/bin/lessc app/style/style.less cordova/www/style.css",

    "watch-mobile": "npm run watch-mobile-js && npm run watch-mobile-css",
    "build-mobile": "npm run build-mobile-debug && npm run minify-mobile-js && npm run minify-mobile-css"
  },
  "browser": {
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "bootstrap-notify": "./app/contrib/bootstrap.notify-3.1.5.js",
    "jquery-color": "./app/contrib/jquery.color-2.1.2.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "hbsfy"
    ]
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "bootstrap-notify": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "bootstrap-switch": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "jquery-color": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  }
}
