<?xml version='1.0' encoding='utf-8'?>
<widget id="de.bretschn.aistracker" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="hdpi" src="res/android/drawable-hdpi/appicon.png" />
    <icon density="mdpi" src="res/android/drawable-mdpi/appicon.png" />
    <icon density="xhdpi" src="res/android/drawable-xhdpi/appicon.png" />
    <icon density="xxhdpi" src="res/android/drawable-xxhdpi/appicon.png" />
    <splash density="port-hdpi" src="res/android/drawable-hdpi/background.9.png" />
    <splash density="port-mdpi" src="res/android/drawable-mdpi/background.9.png" />
    <splash density="port-xhdpi" src="res/android/drawable-xhdpi/background.9.png" />
    <splash density="port-xxhdpi" src="res/android/drawable-xxhdpi/background.9.png" />
    <name>AIS Tracker</name>
    <description>
        View AIS messages received in Hamburg
    </description>
    <author email="marcel.bretschneider@gmail.com" href="http://mb.aquarius.uberspace.de">
        Marcel Bretschneider
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
